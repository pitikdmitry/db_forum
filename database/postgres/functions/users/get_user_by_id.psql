CREATE OR REPLACE FUNCTION get_user_by_id(p_user_id INT)
  RETURNS TABLE(user_id INT,
                nickname CITEXT,
                email CITEXT,
                about TEXT,
                fullname TEXT)
AS
$BODY$
  BEGIN
    RETURN QUERY SELECT u.user_id, u.nickname, u.email, u.about, u.fullname
    FROM users u
    WHERE u.user_id = p_user_id;
  END;
$BODY$
LANGUAGE plpgsql VOLATILE;