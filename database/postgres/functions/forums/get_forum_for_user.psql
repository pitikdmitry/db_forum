CREATE OR REPLACE FUNCTION get_forum_for_user(p_user_id INT)
  RETURNS TABLE(forum_id INT,
                slug CITEXT,
                user_id INT,
                title TEXT)
AS
$BODY$
  BEGIN
    RETURN QUERY SELECT f.forum_id, f.slug, f.user_id, f.title
    FROM forums f
    WHERE f.user_id = p_user_id;
  END;
$BODY$
LANGUAGE plpgsql VOLATILE;